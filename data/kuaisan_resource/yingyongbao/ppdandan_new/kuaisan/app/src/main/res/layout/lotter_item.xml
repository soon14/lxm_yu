<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="@dimen/layout_padding"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_more"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/click_more"/>

    <ImageView
        android:id="@+id/img_web"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="@dimen/layout_padding"
        android:src="@mipmap/icon_logo"/>

    <TextView
        android:id="@+id/txt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_web"
        android:layout_marginLeft="5dp"
        android:text="介绍"
        android:textStyle="bold"
        android:textColor="@color/txt_black"
        android:textSize="@dimen/txt_size_max" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_type"
        android:layout_toLeftOf="@id/img_more"
        android:layout_marginLeft="10dp"
        android:text="介绍sdsadsadsa"
        android:textColor="@color/gray_03"
        android:textSize="@dimen/txt_size" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/img_more"
        android:layout_toRightOf="@id/img_web"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/txt_time"
        android:text="介绍sdsadsadsa"
        android:textColor="@color/gray_03"
        android:textSize="@dimen/txt_size" />

</RelativeLayout>